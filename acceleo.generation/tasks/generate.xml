<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="acceleo.generation">
    <property name="ECLIPSE_HOME" value="../../../eclipse/modeling-2022-03/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="acceleo.generation.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/acceleo.generation/bin"/>
    </path>

    <path id="acceleo.generation.classpath">
        <path refid="acceleo.generation.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="acceleo.generation.libraryclasspath.alljars">
        <pathelement location="../acceleo.generation/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="acceleo.generation.classpath.alljars">
        <path refid="acceleo.generation.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="acceleo.generation.main.Generate" classpathref="acceleo.generation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="acceleo.generation.main.Generate" classpathref="acceleo.generation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
